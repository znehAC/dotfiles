#!/bin/bash

envdir="$HOME/.local/share/envwrapper"
desktopdir="$HOME/.local/share/applications"

echo "üåü Wrapped Applications:"
echo

if [[ ! -d "$envdir" ]]; then
    echo "‚ùå No envwrapper environment directory found."
    exit 1
fi

for envfile in "$envdir"/*.env; do
    [[ -e "$envfile" ]] || { echo "‚ùå No wrapped apps found."; exit 1; }
    appname=$(basename "$envfile" .env)
    desktop="$desktopdir/${appname}.desktop"

    echo "üîπ $appname"
    if [[ -f "$desktop" ]]; then
        exec_line=$(grep -i '^Exec=' "$desktop" | cut -d'=' -f2-)
        echo "    Exec: $exec_line"
    else
        echo "    (No .desktop file found)"
    fi
    echo "    Envs:"
    sed 's/^/      /' "$envfile"
    echo
done
